real = float(input('Quantos Reais você tem na carteira? R$'))
dolar = float(input('Qual o valor da cotação do Dólar? $'))
euro = float(input('Qual o valor da cotção do Euro? €'))

resultado = real / dolar
resultado1 = real/ euro

